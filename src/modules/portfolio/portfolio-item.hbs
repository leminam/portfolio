<div class="portfolio__item JS-View">
  <div class="portfolio__preview">
    <img class="portfolio__preview-logo" src="{{ logo }}">
    <div class="portfolio__preview-background {{ previewBackgroundClass }}"><img class="JS-View-Wrapper portfolio__preview-image {{ portfolioPreviewClass }}" src="{{ device }}">
    <img class="JS-View-Current portfolio__preview-image {{ portfolioPreviewClass }}" src="{{ device }}">
    </div>
  </div>
  <div class="portfolio__info">
    <div class="portfolio__info-title">{{ title }}</div>
    <div class="portfolio__info-description">{{ info_description }}</div>
  </div>  
  <div class="portfolio__devices">
    <div class="portfolio__devices-nav">
      <span class="JS-View-Type portfolio__devices-item" data-type="desktop">Desktop</span>
      <span class="JS-View-Type portfolio__devices-item portfolio__devices-item_space" data-type="tablet">Tablet</span>
      <span class="JS-View-Type portfolio__devices-item" data-type="mobile">Mobile</span>
    </div>
    <div class="portfolio__devices-description">{{ devices_description }}</div>
    <div class="portfolio__devices-image">
      <img src="{{ screenshot }}" class="JS-View-Image portfolio__devices-screenshot" data-image="{{ screenshot }}">
      <img src="{{ screenshot }}" class="JS-View-Image portfolio__devices-screenshot" data-image="{{ screenshot }}">
      <img src="{{ screenshot }}" class="JS-View-Image portfolio__devices-screenshot" data-image="{{ screenshot }}">
    </div>
  </div>
</div>